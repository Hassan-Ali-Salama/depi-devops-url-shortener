{
  "id": null,
  "uid": "url-shortener-dashboard",
  "title": "URL Shortener Service",
  "tags": ["url-shortener", "week3", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Rate of URL Creations & Redirects (Week 3)",
      "description": "Week 3 - rate of URLs shortened and redirects over time.",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(url_shortener_created_total[5m])",
          "legendFormat": "URLs created /s"
        },
        {
          "refId": "B",
          "expr": "rate(url_shortener_redirect_total[5m])",
          "legendFormat": "Redirects /s"
        }
      ]
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Total Shortened URLs (Week 3)",
      "description": "Week 3 - total URLs that have been shortened.",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "url_shortener_created_total"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "horizontal",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "p95 Request Latency (Week 3)",
      "description": "Week 3 - 95th percentile request latency for URL creation and redirects.",
      "gridPos": { "h": 8, "w": 18, "x": 6, "y": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(url_shortener_request_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95 latency (s)"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Rate of 404 Errors (Week 3)",
      "description": "Week 3 - rate of failed lookups (404).",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(url_shortener_not_found_total[5m])",
          "legendFormat": "404s /s"
        }
      ]
    }
  ],
  "templating": { "list": [] },
  "time": { "from": "now-15m", "to": "now" }
}
